<div ng-controller="warehouseController as vm">
    <div class="panel panel-default">
        <div class="panel-heading">Add Warehouse</div>
        <div class="panel-body">
            <form id="frmNewWarehouse" role="form" name="newWarehouseForm" class="form-horizontal" novalidate>
                <fieldset>
                    <input id="warehouseId" ng-model="vm.warehouse.id" type="hidden" />
                    <div class="form-group">
                        <div class="col-md-3">
                            <label for="warehouseCode">Code*</label>
                            <input id="warehouseCode" ng-model="vm.warehouse.warehouseCode" ng-disabled="!vm.disableEdit" class="form-control" placeholder="Enter Warehouse Code Here" required />
                        </div>
                        <div class="col-md-3">
                            <label for="warehouseName">Name*</label>
                            <input id="warehouseName" ng-model="vm.warehouse.warehouseName" class="form-control" placeholder="Enter Warehouse Name Here" required />
                        </div>                  
                        <div class="col-md-3">
                            <label for="warehouseAddress">Address</label>
                            <input id="warehouseAddress" ng-model="vm.warehouse.warehouseAddress" class="form-control" placeholder="Enter Warehouse Address Here" />
                        </div>
                        <div class="col-md-3">
                            <label for="warehousePhone">Phone</label>
                            <input id="warehousePhone" ng-model="vm.warehouse.warehousePhone" class="form-control" placeholder="Enter Warehouse Phone Here" />
                        </div>
                    </div>

                    <button ng-click="vm.saveWarehouse()" ng-disabled="newWarehouseForm.$invalid" type="submit" class="btn btn-primary">Save</button>
                </fieldset>
            </form>
        </div>
    </div>
    <div class="panel panel-default">

        <div class="panel-heading">All Warehouses</div>

        <div class="panel-body">
            <button ng-click="vm.editSelectedRow()" class="btn btn-primary" ng-disabled="vm.disableEdit" style="margin:10px 0 10px 0">Edit Selected Row</button>
            <button ng-click="vm.deleteWarehouse()" class="btn btn-primary" ng-disabled="vm.disableEdit" style="margin:10px 0 10px 0">Delete Selected Row</button>

            <div id="warehouseGrid" ui-grid="vm.gridOptions" ui-grid-selection class="uigrid"></div>
        </div>
    </div>
</div>