<div ng-controller="finishProductWithFormulaController as vm">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading"> Create Finish Product With Formula</div>
            <div class="panel-body">
                <form id="frmNewFinishProductWithFormula" role="form" name="newFinishProductWithFormula" class="form-horizontal" novalidate>
                    <fieldset>

                        <input id="finishProductId" ng-model="vm.finishProduct.id" type="hidden" />
                        <div class="form-group">

                            <div class="col-md-3">
                                <label for="brandType">Brand</label>
                                <select id="brandType" class="form-control" name="sltBrandType" ng-model="vm.selectedBrand" ng-options=" option.brandName for option in vm.brands track by option.id" disabled>
                                    <option value="">Select Brand</option>
                                </select>
                                <span class="error" ng-show="newBrandForm.sltBrandType.$dirty && newBrandForm.sltBrandType.$invalid">Select Brand Type</span>
                            </div>
                            <div class="col-md-3">
                                <label for="finishProductProductName">Product Name</label>
                                <input id="finishProductProductName" ng-model="vm.finishProduct.productName" class="form-control" placeholder="Enter Product Name Here" disabled />
                            </div>


                            <div class="col-md-3">

                                <label for="productGrade">Product Grade</label>
                                <select id="productGrade" class="form-control" ng-model="vm.selectedProductGrade" ng-options="option.gradeName for option in vm.productGrades track by option.id" disabled>
                                    <option value="">---Please select---</option>
                                </select>

                            </div>
                            <div class="col-md-3">

                                <label for="productApi">Product API</label>
                                <select id="productApi" class="form-control" ng-model="vm.selectedProductApi" ng-options="option.apiName for option in vm.productApis track by option.id" disabled>
                                    <option value="">---Please select---</option>
                                </select>

                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <label for="productCategory">Product Category</label>
                                <select id="productCategory" class="form-control" ng-model="vm.selectedProductCategory" ng-options="option.categoryName for option in vm.productCategories track by option.id" disabled>
                                    <option value="">---Please select---</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label for="packSize">Pack Size</label>
                                <input id="packSize" ng-model="vm.finishProduct.packSize" class="form-control" placeholder="Enter Pack Size Here" disabled />
                            </div>

                            <div class="col-md-3">
                                <label for="multiplier">Multiplier</label>
                                <input id="multiplier" ng-model="vm.finishProduct.multiplier" class="form-control" placeholder="Enter Multiplier Here" disabled />
                            </div>
                            <div class="col-md-3">
                                <label for="productUnit">Product Unit</label>
                                <select id="productUnit" class="form-control" ng-model="vm.selectedProductUnit" ng-options="option.unitName for option in vm.productUnits track by option.id" disabled>
                                    <option value="">---Please select---</option>
                                </select>
                            </div>

                        </div>

                        <div class="form-group">

                            <div class="col-md-3">
                                <label for="mrp">MRP</label>
                                <input id="mrp" ng-model="vm.finishProduct.mrp" class="form-control" placeholder="Enter MRP Here" disabled />
                            </div>
                            <div class="col-md-3">
                                <label for="reOrderPoint">Re Order Point</label>
                                <input id="reOrderPoint" ng-model="vm.finishProduct.reOrderPoint" class="form-control" placeholder="Enter Re Order Point Here" disabled />
                            </div>

                        </div>
                    </fieldset>
                </form>
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">Finish Product Formula</div>
            <div class="panel-body">
                <div id="formulaItemGrid" ui-grid="vm.gridOptions" ui-grid-selection class="uigrid"></div>
            </div>
        </div>
    </div>
</div>