<div ng-controller="vendorController as vm">
    <div class="panel panel-default">
        <div class="panel-heading">Add Vendor</div>
        <div class="panel-body">
            <form id="frmNewVendor" role="form" name="newVendorForm" class="form-horizontal" novalidate>
                <fieldset>
                    <input id="vendorId" ng-model="vm.vendor.id" type="hidden" />
                    <div class="form-group">
                        <div class="col-md-3">
                            <label for="vendorCode">Code*</label>
                            <input id="vendorCode" name="code" ng-model="vm.vendor.vendorCode" ng-disabled="!vm.disableEdit" class="form-control" placeholder="Enter Vendor Code Here" required
                                   unique-code service-name="abp.services.app.vendor" />
                        </div>
                        <div class="col-md-3">
                            <label for="vendorName">Name*</label>
                            <input id="vendorName" ng-model="vm.vendor.vendorName" class="form-control" placeholder="Enter Vendor Name Here" required />
                        </div>

                        <div class="col-md-3">
                            <label for="vendorAddress">Vendor Address</label>
                            <input id="vendorAddress" ng-model="vm.vendor.vendorAddress" class="form-control" placeholder="Enter Vendor Address Here" />
                        </div>
                        <div class="col-md-3">
                            <label for="vendorContactPerson">Vendor Contact Person</label>
                            <input id="vendorContactPerson" ng-model="vm.vendor.vendorContactPerson" class="form-control" placeholder="Enter Vendor Contact Person Here" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <label for="vendorContactNumber">Vendor Contact Number</label>
                            <input id="vendorContactNumber" ng-model="vm.vendor.vendorContactNumber" class="form-control" placeholder="Enter Vendor Contact Number Here" />
                        </div>
                        <div class="col-md-3">
                            <label for="vendorContactEmail">Vendor Contact Email</label>
                            <input id="vendorContactEmail" ng-model="vm.vendor.vendorContactEmail" class="form-control" placeholder="Enter Vendor Contact Email Here" />
                        </div>
                        <div class="col-md-3">
                            <label for="vendorWebsite">Vendor Website</label>
                            <input id="vendorWebsite" ng-model="vm.vendor.vendorWebsite" class="form-control" placeholder="Enter Vendor Website Here" />
                        </div>
                        <div class="col-md-3">
                            <label for="vendorFax">Vendor Fax</label>
                            <input id="vendorFax" ng-model="vm.vendor.vendorFax" class="form-control" placeholder="Enter Vendor Fax Here" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <label for="vendorBankDetails">Vendor Bank Details</label>
                            <input id="vendorBankDetails" ng-model="vm.vendor.vendorBankDetails" class="form-control" placeholder="Enter Vendor Bank Details Here" />
                        </div>
                    </div>
                    <button ng-click="vm.saveVendor()" ng-disabled="newVendorForm.$invalid" type="submit" class="btn btn-primary">Save</button>
                </fieldset>
            </form>
            <p class="help-block" ng-show="newVendorForm.code.$error.unique">VendorCode is already taken.</p>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">All Vendors</div>
        <div class="panel-body">
            <button ng-click="vm.editSelectedRow()" class="btn btn-primary" ng-disabled="vm.disableEdit" style="margin:10px 0 10px 0">Edit Selected Row</button>
            <div id="vendorGrid" ui-grid="vm.gridOptions" ui-grid-selection class="uigrid"></div>
        </div>
    </div>
</div>