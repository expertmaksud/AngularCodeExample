<div ng-controller="rawMaterialController as vm">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading">Add Raw Material</div>
            <div class="panel-body">
                <form id="frmNewRawMaterial" role="form" name="newRawMaterialForm" class="form-horizontal" novalidate>
                    <fieldset>
                        <input id="rawMaterialId" ng-model="vm.rawMaterial.id" type="hidden" />
                        <div class="form-group">
                            <div class="col-md-3">
                                <label for="rawMaterialType">Raw Material Type</label>
                                <select id="rawMaterialType" class="form-control" ng-model="vm.selectedRawMaterialType" ng-options="option.name for option in vm.rawMaterialTypes track by option.id" required>
                                    <option value="" selected>---Please select---</option>
                                </select>
                            </div>

                            @*<div class="col-md-4">
                                    <label for="brandType">Brand Type</label>
                                    <select id="brandType" class="form-control" name="sltBrandType" ng-model="vm.selectedBrand" ng-options= "option.brandName for option in vm.brands track by option.id" required>
                                        <option value="">Select Brand Type</option>
                                    </select>
                                    <span class="error" ng-show="newBrandForm.sltBrandType.$dirty && newBrandForm.sltBrandType.$invalid">Select Brand Type</span>
                                </div>*@

                           
                            <div class="col-md-3">
                                <label for="rawMaterialProductName">Product Name</label>
                                <input id="rawMaterialProductName" ng-model="vm.rawMaterial.productName" class="form-control" placeholder="Enter Product Name Here" required />
                            </div>
                            <div class="col-md-2">
                                <label for="size">Size / Group</label>
                                <input id="size" ng-model="vm.rawMaterial.sizeGroup" class="form-control" placeholder="Enter Size / Group Here" />
                            </div>
                            <div class="col-md-2">
                                <label for="model">Model</label>
                                <input id="model" ng-model="vm.rawMaterial.model" class="form-control" placeholder="Enter Model " required />
                            </div>
                            <div class="col-md-2">
                                <label for="mrp">MRP</label>
                                <input id="mrp" ng-model="vm.rawMaterial.mrp" class="form-control" placeholder="Enter MRP" required />
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <label for="productUnit">Product Unit</label>
                                <select id="productUnit" class="form-control" ng-model="vm.selectedProductUnit" ng-options="option.unitName for option in vm.productUnits track by option.id" required>
                                    <option value="">---Please select---</option>
                                </select>
                            </div>
                            
                            <div class="col-md-3">
                                <label for="color">Color</label>
                                <input id="color" ng-model="vm.rawMaterial.color" class="form-control" placeholder="Enter Color Here" />
                            </div>
                            <div class="col-md-2">
                                <label for="origin">Origin</label>
                                <input id="origin" ng-model="vm.rawMaterial.origin" class="form-control" placeholder="Enter Origin " />
                            </div>
                            <div class="col-md-2">
                                <label for="reOrderPoint">Re Order Point</label>
                                <input id="reOrderPoint" ng-model="vm.rawMaterial.reOrderPoint" class="form-control" placeholder="Enter Re Order Point " required />
                            </div>

                        </div>

                        <button ng-click="vm.saveRawMaterial()" ng-disabled="newRawMaterialForm.$invalid" type="submit" class="btn btn-primary">Save</button>
                        <button ng-click="vm.reSet()" class="btn btn-primary">ReSet</button>
                    </fieldset>
                </form>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">All Raw Materials</div>
            <div class="panel-body">


                <button ng-click="vm.editSelectedRow()" class="btn btn-primary" ng-disabled="vm.disableEdit" style="margin:10px 0 10px 0">Edit Selected Row</button>
                <button ng-click="vm.deleteRawMaterial()" class="btn btn-primary" ng-disabled="vm.disableEdit" style="margin:10px 0 10px 0">Delete Selected Row</button>

                <div id="rawMaterialGrid" ui-grid="vm.gridOptions" ui-grid-selection class="uigrid"></div>

            </div>
        </div>
    </div>
</div>
