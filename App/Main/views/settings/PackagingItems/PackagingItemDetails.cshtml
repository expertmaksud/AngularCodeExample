<div ng-controller="packagingItemController as vm">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading">Packaging Item Details</div>
            <div class="panel-body">
                <form id="frmNewPackagingItem" role="form" name="newPackagingItem" class="form-horizontal" novalidate>
                    <fieldset>
                        <input id="packagingItemId" ng-model="vm.product.id" type="hidden" />
                        <div class="form-group">
                            <div class="col-md-3">
                                <label for="brandType">Brand</label>
                                <select id="brandType" class="form-control" name="sltBrandType" ng-model="vm.selectedBrand" ng-options=" option.brandName for option in vm.brands track by option.id" disabled>
                                    <option value="">Select Brand</option>
                                </select>
                                <span class="error" ng-show="newBrandForm.sltBrandType.$dirty && newBrandForm.sltBrandType.$invalid">Select Brand Type</span>
                            </div>
                            <div class="col-md-3">
                                <label for="productCategory">Category</label>
                                <select id="productCategory" class="form-control" ng-model="vm.selectedProductCategory" ng-options="option.categoryName for option in vm.productCategories track by option.id" disabled>
                                    <option value="">Please Select</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label for="productGrade">Grade</label>
                                <select id="productGrade" class="form-control" ng-model="vm.selectedProductGrade" ng-options="option.gradeName for option in vm.productGrades track by option.id" disabled>
                                    <option value="">Please Select</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label for="productApi">API</label>
                                <select id="productApi" class="form-control" ng-model="vm.selectedProductApi" ng-options="option.apiName for option in vm.productApis track by option.id" disabled>
                                    <option value="">Please Select</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label for="productUnit">Unit</label>
                                <select id="productUnit" class="form-control" ng-model="vm.selectedProductUnit" ng-options="option.unitName for option in vm.productUnits track by option.id" disabled>
                                    <option value="">Please Select</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-3">
                                <label for="packagingItemProductName">Name</label>
                                <input id="packagingItemProductName" ng-model="vm.product.productName" class="form-control" readonly />
                            </div>
                            <div class="col-md-3">
                                <label for="packSize">Pack Size</label>
                                <input id="packSize" ng-model="vm.product.packSize" class="form-control" readonly/>
                            </div>
                            <div class="col-md-2">
                                <label for="multiplier">Multiplier</label>
                                <input id="multiplier" ng-model="vm.product.multiplier" class="form-control" readonly />
                            </div>
                            <div class="col-md-2">
                                <label for="mrp">MRP</label>
                                <input id="mrp" ng-model="vm.product.mrp" class="form-control" readonly />
                            </div>
                            <div class="col-md-2">
                                <label for="reOrderPoint">Re Order Point</label>
                                <input id="reOrderPoint" ng-model="vm.product.reOrderPoint" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <label for="model">Model</label>
                                <input id="model" ng-model="vm.product.model" class="form-control" readonly />
                            </div>
                            <div class="col-md-3">
                                <label for="size">Size/Group</label>
                                <input id="size" ng-model="vm.product.sizeGroup" class="form-control" readonly />
                            </div>

                            <div class="col-md-3">
                                <label for="color">Color</label>
                                <input id="color" ng-model="vm.product.color" class="form-control" readonly />
                            </div>
                            <div class="col-md-3">
                                <label for="origin">Origin</label>
                                <input id="origin" ng-model="vm.product.origin" class="form-control" readonly />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>