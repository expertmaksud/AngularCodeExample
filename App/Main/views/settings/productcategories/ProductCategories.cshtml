<div ng-controller="productCategoryController as vm">
    <div class="panel panel-default">
        <div class="panel-heading">Add Product Category</div>
        <div class="panel-body">


            <form id="frmNewProductCategory" role="form" name="newProductCategoryForm" class="form-inline" novalidate>
                <fieldset>
                    <legend>Add Product Category</legend>
                    <input id="categoryId" ng-model="vm.productCategory.id" type="hidden" />
                    <div class="form-group">
                        <label for="categoryCode">Category Code</label>
                        <input id="categoryCode" ng-model="vm.productCategory.categoryCode" ng-disabled="!vm.disableEdit" class="form-control" placeholder="Enter Product Category Code Here" required />
                    </div>
                    <div class="form-group">
                        <label for="categoryName">Category Name</label>
                        <input id="categoryName" ng-model="vm.productCategory.categoryName" class="form-control" placeholder="Enter Product Category Name Here" required />
                    </div>
                    <button ng-click="vm.saveProductCategory()" ng-disabled="newProductCategoryForm.$invalid" type="submit" class="btn btn-primary">Save</button>
                </fieldset>
            </form>

        </div>
    </div>


        <div class="panel panel-default">
            <div class="panel-heading">All Product Categories</div>
            <div class="panel-body">

                <button ng-click="vm.editSelectedRow()" class="btn btn-primary" ng-disabled="vm.disableEdit" style="margin:10px 0 10px 0">Edit Selected Row</button>
                <button ng-click="vm.deleteProductCategory()" class="btn btn-primary" ng-disabled="vm.disableEdit" style="margin:10px 0 10px 0">Delete Selected Row</button>
                <div id="productCategoryGrid" ui-grid="vm.gridOptions" ui-grid-selection class="uigrid"></div>
            </div>
        </div>
</div>
