<div ng-controller="finishProductRequisitionController as vm">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading">Create Product Requisition</div>
            <div class="panel-body">


                <form id="frmNewProductRequisition" role="form" name="newProductRequisitionForm" class="form-horizontal" novalidate>
                    <fieldset>

                        <input id="productRequisitionId" ng-model="vm.productRequisition.id" type="hidden" />
                        <div class="form-group ">
                            <div class="col-md-2 " ng-class="{ 'has-error' : newProductRequisitionForm.sltWareHouse.$invalid && !newProductRequisitionForm.sltWareHouse.$pristine }">
                                <label for="sltWareHouse">Warehouse </label>
                                <select id="sltWareHouse" name="sltWareHouse" class="form-control" ng-change="vm.getFinishProductDetailsById()" ng-model="vm.selectedWareHouse" ng-options="option.warehouseName for option in vm.wareHouses track by option.id" required>
                                    <option value="">---Please select---</option>
                                </select>
                                <div class="help-block" ng-messages="newProductRequisitionForm.sltWareHouse.$error" ng-if="newProductRequisitionForm.sltWareHouse.$touched">
                                    <p ng-message="required">Please select a WareHouse.</p>
                                </div>
                            </div>
                            <div class="col-md-2" ng-class="{ 'has-error' : newProductRequisitionForm.stockType.$invalid && (!newProductRequisitionForm.stockType.$pristine || newProductRequisitionForm.stockType.$touched) }">
                                <label for="stockType">Stock Type</label>
                                <select id="stockType" class="form-control" name="stockType" ng-model="vm.selectedStockType" ng-change="vm.getFinishProductDetailsById()" ng-options="option.binName for option in vm.stockTypes track by option.id" required>
                                    <option value="">Please select</option>
                                </select>
                                <div class="help-block" ng-messages="newProductRequisitionForm.stockType.$error" ng-if="newStockForm.stockType.$touched">
                                    <p ng-message="required">Stock Type is required.</p>
                                </div>
                            </div>
                            <div class="col-md-3 " ng-class="{ 'has-error' : newProductRequisitionForm.purchaseType.$invalid && !newProductRequisitionForm.purchaseType.$pristine }">
                                <label for="finishProductName">Finish Product</label>
                                <select id="finishProductName" name="finishProductName" class="form-control" ng-change="vm.getFinishProductDetailsById()" ng-model="vm.selectedFinishProduct" ng-options="option.fullProductName for option in vm.finishProducts track by option.id" required>
                                    <option value="">---Please select---</option>
                                </select>
                                <div class="help-block" ng-messages="newProductRequisitionForm.finishProductName.$error" ng-if="newProductRequisitionForm.finishProductName.$touched">
                                    <p ng-message="required">You have to Select Finish Product!</p>
                                </div>
                            </div>

                            <div class="col-md-2">
                                <label for="productionQuantity">Production Quantity</label>
                                <input id="productionQuantity" ng-model="vm.productRequisition.finishProductQuantity" ng-change="vm.getFinishProductDetailsById()" class="form-control" type="number" min="1" placeholder="Enter Finish Product Quantity Here" required />
                            </div>
                            <div class="col-md-3">
                                <label for="remarks">Remarks</label>
                                <input id="remarks" ng-model="vm.productRequisition.remarks" class="form-control" placeholder="Enter Remarks Here" />
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-md-2">
                                <label for="multiplier">Multiplier</label>
                                <input id="multiplier" ng-model="vm.finishProduct.multiplier" class="form-control" placeholder="Enter Multiplier Here" readonly />
                            </div>
                            <div class="col-md-2">
                                <label for="packSize">Pack Size</label>
                                <input id="packSize" ng-model="vm.finishProduct.packSize" class="form-control" placeholder="Enter Pack Size Here" readonly />
                            </div>

                        </div>
                    </fieldset>
                </form>

            </div>
        </div>


        <div class="panel panel-default">
            <div class="panel-heading">Raw Material Requirement based on Finish Product Formula</div>
            <div class="panel-body">
                <div id="formulaItemGrid" ui-grid="vm.gridOptions" ui-grid-selection class="uigrid"></div>
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">Actions</div>
            <div class="panel-body">
                <button ng-click="vm.addNewProductRequisition()" ng-disabled="newProductRequisitionForm.$invalid" type="submit" class="btn btn-primary">Save</button>


            </div>

        </div>
    </div>
</div>