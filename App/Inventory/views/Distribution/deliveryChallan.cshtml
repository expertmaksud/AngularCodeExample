<div ng-controller="deliveryChallanController as vm">
    <div id="divChalan">
        <div class="row pad-top-botm ">
            <div class="col-lg-3 col-md-3 col-sm-6 ">
                <img src="~/App/assets/images/Oriental-Oil-Company-Ltd-24.png" class="img-responsive" />
            </div>
            <div class="col-md-offset-1 col-lg-3 col-md-3 col-sm-3 text-center">
                <h3><strong>DELIVERY CHALAN</strong></h3>

            </div>
        </div>
        <div class="row text-center contact-info">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <hr />
                <span>
                    <strong>Email : </strong>  info@orientaloil.com
                </span>
                <span>
                    <strong>Call : </strong>  +88-01937400479
                </span>
                <span>
                    <strong>Fax : </strong>  +012340-908- 890
                </span>
                <hr />
            </div>
        </div>
        <div class="row pad-top-botm client-info">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <h4>  <strong>ORIENTAL OIL COMPANY LIMITED</strong></h4>
                <b>Corporate Office :</b> The Alliance Building
                <br />
                63 Pragati Sarani, Baridhara, Dhaka-1212.
                <br />
                <b>Factory :</b> {{vm.distributionDetails[0].warehouseAddress}}
                <br />

            </div>
            <div class="col-md-offset-3 col-lg-3 col-md-3 col-sm-3 pull-right">

                <br />
                <strong>Sl No : </strong>{{vm.distribution.dcNumber}}
                <br />
                Date :  {{vm.distribution.creationTime | date:'MMM dd, yyyy'}}

            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>S. No.</th>
                                <th>Item Description</th>
                                <th>Pack Size</th>
                                <th>Multiplier</th>
                                <th>Quantity</th>
                                <th>Total Quantity (Liter)</th>
                                @*<th>Unit</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="x in  vm.distributionDetails track by $index">
                                <td>{{$index+1}}</td>
                                <td>{{x.fullProductName}}</td>
                                <td>{{x.packSize != 0 ? x.packSize : ''}}</td>
                                <td>{{x.multiplier != 0 ? x.multiplier : ''}}</td>
                                <td>{{x.quantity}}</td>
                                <td>{{x.packSize != 0 ? x.packSize*x.multiplier*x.quantity: x.quantity}}</td>
                                @*<td>{{x.unitName}}</td>*@

                            </tr>

                        </tbody>
                    </table>
                </div>

                <div class="pull-right">
                    <h4><strong>  Total : {{vm.totalQuantity}} Liter </strong></h4>
                </div>


            </div>

        </div>
        <div class="row">
            <div class="col-md-4 col-sm-4">
                Driver's Name: {{vm.distribution.driverName}}

            </div>
            <div class="col-md-3 col-sm-3">
                Truck No: {{vm.distribution.vehicleNumber}}

            </div>
            <div class="col-md-3 col-sm-3">
                Contact No: {{vm.distribution.driverContactPhone}}

            </div>

        </div>
        <div class="row " style="padding-top:30px">
            <div class="col-lg-4 col-md-4 col-sm-4 ">
                <strong>Received the above goods in good condition.</strong>
                <br />
                <br />

                -------------------------------------------
                <br />

                Signature


            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 ">
                <br />
                <br />
                <strong>THANK YOU FOR BUSINESS WITH US.</strong>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-2  pull-right">
                <strong>For OOCL.</strong>
                <br />
                <br />

                ----------------------------------
                <br />

                Signature
            </div>
        </div>
    </div>
    <div class="row pad-top-botm">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <hr />
            <a href="#" class="btn btn-primary" ng-click="vm.print()">Print </a>
            &nbsp;&nbsp;&nbsp;
            <a href="#" class="btn btn-success " ng-click="vm.createPDF()">Download</a>

        </div>
    </div>

</div>
